@model List<Food>



@foreach(Food f in Model) {
  



<diV class="Foodmenu"> 
   <form action="/shoppingcart/@f.FoodId/addtoshoppingcart" method="post">
        <img src="@f.FoodImg" alt="Foodimage" width="250" height="200"><br>
        <h5>@f.FoodName</h5>
       <h5>Description:@f.FoodDescription</h5> <p></p>
        <h5>Price $ :@f.FoodPrice</h5> 
        <button class="border">
             <img  src="/Image/addtocart.jfif" alt="Profile"width="150" height="" alt="addtocart">
         </button> 
   </form>

</diV>






}
   























